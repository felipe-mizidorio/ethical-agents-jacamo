mas ethicalAgents {
  agent antDeontologic: ant.asl {
    focus: w.board
  }

  agent antConsequentialist: ant.asl {
    focus: w.board
  }

  agent antVirtueEthics: ant.asl {
    focus: w.board
  }

  agent grasshopper: grasshopper.asl {
    instances: 10
    focus: w.board
  }

  agent climate: climate.asl {
    focus: w.season, w.board
  }

  workspace w {
    artifact board: blackboard.BlackBoard
    artifact season: season.Season
  }

  organisation o: org.xml {
    group g1: group1 {
      responsible-for: s1
      players: antDeontologic deontologic
               antConsequentialist consequentialist
               antVirtueEthics virtue_ethics
               grasshopper grasshopper
    }
    scheme s1: negotiationSch
  }
}
