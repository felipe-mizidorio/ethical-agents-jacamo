<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet href="http://moise.sourceforge.net/xml/os.xsl" type="text/xsl" ?>

<organisational-specification
    id="ethicalAgents"
    os-version="0.8"

    xmlns='http://moise.sourceforge.net/os'
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:schemaLocation='http://moise.sourceforge.net/os
                        http://moise.sourceforge.net/xml/os.xsd' >

<structural-specification>

<role-definitions>
    <role id="deontologic"/>
    <role id="consequentialist"/>
    <role id="virtue_ethics"/>
    <role id="grasshopper"/>
</role-definitions>

<group-specification id="group1">
    <roles>
        <role id="deontologic"      min="1" max="1"/>
        <role id="consequentialist" min="1" max="1"/>
        <role id="virtue_ethics"    min="1" max="1"/>
        <role id="grasshopper"      min="1" max="1"/>
    </roles>

    <links>
        <link from="deontologic" to="grasshopper" type="communication" scope="intra-group" bi-dir="true"/>
        <link from="consequentialist" to="grasshopper" type="communication" scope="intra-group" bi-dir="true"/>
        <link from="virtue_ethics" to="grasshopper" type="communication" scope="intra-group" bi-dir="true"/>
    </links>
    <formation-constraints>
        <compatibility from="deontologic" to="grasshopper" />
        <compatibility from="consequentialist" to="grasshopper" />
        <compatibility from="virtue_ethics" to="grasshopper" />
    </formation-constraints>
</group-specification>
</structural-specification>

<functional-specification>
    <scheme id="negotiationSch">
        <goal id="negotiate">
            <plan operator="sequence">
                <goal id="askFood"/>
                <goal id="startNegotiation"/>
            </plan>
        </goal>

        <mission id="mDeontologic" min="1">
            <goal id="startNegotiation"/>
        </mission>

        <mission id="mConsequentialist" min="1">
            <goal id="startNegotiation"/>
        </mission>

        <mission id="mVirtueEthics" min="1">
            <goal id="startNegotiation"/>
        </mission>

        <mission id="mGrasshopper" min="1">
            <goal id="askFood"/>
        </mission>
    </scheme>
</functional-specification>

<normative-specification>
    <norm id="n1" role="deontologic" type="obligation" mission="mDeontologic"/>
    <norm id="n2" role="consequentialist" type="obligation" mission="mConsequentialist"/>
    <norm id="n3" role="virtue_ethics" type="obligation"  mission="mVirtueEthics"/>
    <norm id="n4" role="grasshopper" type="obligation" mission="mGrasshopper"/>
</normative-specification>

</organisational-specification>
