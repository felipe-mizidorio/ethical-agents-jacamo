<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet href="http://moise.sourceforge.net/xml/os.xsl" type="text/xsl" ?>

<organisational-specification
    id="ethicalAgents"
    os-version="0.8"

    xmlns='http://moise.sourceforge.net/os'
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:schemaLocation='http://moise.sourceforge.net/os
                        http://moise.sourceforge.net/xml/os.xsd' >

<structural-specification>

<role-definitions>
    <role id="deontologic"/>
    <role id="consequentialist"/>
    <role id="virtue_ethics"/>
    <role id="grasshopper"/>
</role-definitions>

<group-specification id="group1">
    <roles>
        <role id="deontologic"      min="1"/>
        <role id="consequentialist" min="1"/>
        <role id="virtue_ethics"    min="1"/>
        <role id="grasshopper"      min="1"/>
    </roles>

    <links>
        <link from="deontologic" to="grasshopper" type="communication" scope="intra-group" bi-dir="true"/>
        <link from="consequentialist" to="grasshopper" type="communication" scope="intra-group" bi-dir="true"/>
        <link from="virtue_ethics" to="grasshopper" type="communication" scope="intra-group" bi-dir="true"/>
        <link from="grasshopper" to="deontologic" type="communication" scope="intra-group" bi-dir="true"/>
        <link from="grasshopper" to="consequentialist" type="communication" scope="intra-group" bi-dir="true"/>
        <link from="grasshopper" to="virtue_ethics" type="communication" scope="intra-group" bi-dir="true"/>
    </links>
</group-specification>
</structural-specification>

<functional-specification>
    <scheme id="negotiationSch">
        <goal id="negotiation">
            <plan operator="parallel">
                <goal id="receiveFood">
                    <plan operator="sequence">
                        <goal id="askFood"/>
                    </plan>
                </goal>
                <goal id="analyzeProposal">
                    <plan operator="sequence">
                        <goal id="startNegotiation"/>
                    </plan>
                </goal>
            </plan>
        </goal>

        <mission id="mDeontologic" min="1">
            <goal id="startNegotiation"/>
        </mission>

        <mission id="mConsequentialist" min="1">
            <goal id="startNegotiation"/>
        </mission>

        <mission id="mVirtueEthics" min="1">
            <goal id="startNegotiation"/>
        </mission>

        <mission id="mGrasshopper" min="1">
            <goal id="askFood"/>
        </mission>
    </scheme>
</functional-specification>

<normative-specification>
    <norm id="n1" type="permission" role="deontologic" mission="mDeontologic"/>
    <norm id="n2" type="permission" role="consequentialist" mission="mConsequentialist"/>
    <norm id="n3" type="permission" role="virtue_ethics"  mission="mVirtueEthics"/>
    <norm id="n4" type="permission" role="grasshopper" mission="mGrasshopper"/>
</normative-specification>

</organisational-specification>
